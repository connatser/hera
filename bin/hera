#!/usr/bin/env ruby
$:.unshift File.join(File.dirname(__FILE__), *%w[.. lib])

begin
  require 'optparse'
  require 'hera'
  rescue LoadError
  require 'rubygems'
  require 'hera'
end

help = <<HELP
Hera, a progressive, rapid deployment, static site generating tool.

Basic Command Line Usage:
  hera --init           # Initializes the hera structure.
  hera --watch          # Starts the haml and sass watcher.
  hera --minimize       # Minimizes your css and js scripts.
  hera --generate       # Generates the jekyll site.
  hera --deploy         # Deploys the site to your server.

HELP

exec = {}
options = {}
opts = OptionParser.new do |opts|
  opts.banner = help

  opts.on("--deploy") do
    options['deploy'] = true
  end

  opts.on("--minimize") do
    options['minimize'] = true
  end

  opts.on("--generate") do
    options['generate'] = true
  end

  opts.on("--init") do
    options['init'] = true
  end
  
  opts.on("--watch") do
    options['watch'] = true
  end
  
end

opts.parse!

if options['deploy']
  deploy_hera = DeployHera.new
end

if options['minimize']
  minimize_hera = MinimizeHera.new
end

if options['generate']
  generate_hera = GenerateHera.new
end

if options['init']
  init_hera = InitHera.new
end

if options['watch']
  watch_hera = WatchHera.new
end